<section class="block argument-block" id="{{ block.data.id }}">
  <h2>{{ block.data.title }}</h2>
  {% if block.data.primary_domain or (block.data.secondary_domains and block.data.secondary_domains.length) %}
  <div class="block-domain-badges">
    {% set primary_domain = block.data.primary_domain %}
    {% set secondary_domains = block.data.secondary_domains %}
    {% include "components/domain-badges.njk" %}
  </div>
  {% endif %}
  {% if block.data.tags or block.data.topics or block.data.categories %}
  <div class="block-meta">
    {% if block.data.categories %}
      <div class="meta-group">
        <span class="meta-label">Categories:</span>
        <ul class="meta-list">
          {%- for category in block.data.categories %}
            <li>
              <a href="{{ ('/topics/category/' ~ (category | slugifyTerm) ~ '/') | url }}">{{ category }}</a>
            </li>
          {%- endfor %}
        </ul>
      </div>
    {% endif %}
    {% if block.data.topics %}
      <div class="meta-group">
        <span class="meta-label">Topics:</span>
        <ul class="meta-list">
          {%- for topic in block.data.topics %}
            <li>
              <a href="{{ ('/topics/topic/' ~ (topic | slugifyTerm) ~ '/') | url }}">{{ topic }}</a>
            </li>
          {%- endfor %}
        </ul>
      </div>
    {% endif %}
    {% if block.data.tags %}
      <div class="meta-group">
        <span class="meta-label">Tags:</span>
        <ul class="meta-list">
          {%- for tag in block.data.tags %}
            <li>
              <a href="{{ ('/topics/tag/' ~ (tag | slugifyTerm) ~ '/') | url }}">{{ tag }}</a>
            </li>
          {%- endfor %}
        </ul>
      </div>
    {% endif %}
  </div>
  {% endif %}
  <div class="block-content">
    {{ block.templateContent | renderWithCitations(citations, sources, source_summaries) | safe }}
  </div>
</section>
